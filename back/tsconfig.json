{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["ES2015"],
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["src/**/*"],  // Inclui todos os arquivos e subpastas na pasta src
  "exclude": ["node_modules"] // Exclui node_modules
}