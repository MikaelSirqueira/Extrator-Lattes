generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int       @id @default(autoincrement())
  name       String
  password   String
  admin      Boolean
  created_at DateTime? @default(now())
  updated_at DateTime? @updatedAt

  researches Research[]  // Relacionamento com as pesquisas

  @@map("users")
}

model Research {
  id              Int       @id @default(autoincrement())
  name1           String
  name2           String
  informations    String
  graphs          String
  created_at      DateTime? @default(now())
  updated_at      DateTime? @updatedAt

  userId          Int
  user            User      @relation(fields: [userId], references: [id]) // Relacionamento com o usu√°rio

  @@map("savedResearches")
}
